@model TMDT.Web.Models.RegisterViewModel
@using BotDetect.Web.Mvc;
@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
}
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<div class="row">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        if (TempData["SuccessMsg"] != null)
        {
            <div class="alert alert-success" role="alert">
                <p>Chúng tôi đã gửi email cho việc xác thực tài khoản đến email của bạn.Kiểm tra email của bạn để hoàn tất việc đăng ký tại <strong>ONLINE SHOP</strong> </p>
            </div>
        }
        @Html.AntiForgeryToken();
        @Html.ValidationSummary(false, "", new { @class = "error" });
        <h3>THÔNG TIN CÁ NHÂN</h3>
        <br />
        <div class="col-md-6 col-sm-6">
            <div class="comments-area">              
                <div class="form-group">
                    <label>Họ và tên*</label>
                    @Html.TextBoxFor(model => model.FullName)
                    <label>Email Address*</label>
                    @Html.TextBoxFor(model => model.Email)
                    <label>Địa chỉ*</label>
                    @Html.TextBoxFor(model => model.Address)
                    <label>Số điện thoại*</label>
                    @Html.TextBoxFor(model => model.PhoneNumber)
                    <label>Tên đăng nhập*</label>
                    @Html.TextBoxFor(model => model.UserName)
                    <label>Mật khẩu*</label>
                    @Html.PasswordFor(model => model.Password)
                    @{MvcCaptcha registerCaptcha = new MvcCaptcha("registerCaptcha");}
                    @Html.Captcha(registerCaptcha)
                    @Html.TextBox("CaptchaCode")
                   
                </div>
                <div class="clearfix"> </div>
            </div>
        </div>
       <div class="col-md-6 col-sm-6">
           <div class="comments-area">
               <label>Ngày sinh</label>

               <label>Ảnh đại diện</label>  
               <input type="file" name="fileUpload" /> 
               @*<img src="@Model.Avatar" style="width:50px;height:50px;" />*@                   
               <label>Giới tính : </label>
               @Html.RadioButtonFor(model => model.Gender,true)<label>Nam</label>
               @Html.RadioButtonFor(model => model.Gender, false)<label>Nữ</label>

              
           </div> 
        </div>     
        <div class="clearfix"> </div>
        <div class="register-but">
            <button class="btn-default1" type="submit">Đăng ký</button>
            <div class="clearfix"> </div>
        </div>
    }
</div>
<div class="clearfix"> </div>


